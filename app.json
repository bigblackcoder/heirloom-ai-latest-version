{
  "expo": {
    "name": "Heirloom Identity",
    "slug": "heirloom-identity",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#143404"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.heirloom.identity",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "Heirloom uses your camera for face verification to secure your identity."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#143404"
      },
      "package": "com.heirloom.identity",
      "versionCode": 1,
      "permissions": [
        "CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Heirloom to access your camera for identity verification."
        }
      ]
    ]
  }
}